# NPM configuration optimized for GitHub Actions
# Fix for "npm config get cache" errors and dependencies issues

# Disable problematic features
cache=false
fund=false
audit=false

# Performance optimizations for CI/CD
prefer-offline=true
ignore-scripts=false
engine-strict=false

# GitHub Actions specific
use-lockfile=true
save-exact=true

# Network optimizations
strict-ssl=true
registry=https://registry.npmjs.org/

# Memory and performance
maxsockets=5
loglevel=warn

# Fix for GitHub Actions cache issues
# Remove prefix to avoid local directory conflicts
# prefix=/home/minimax/.npm-global
